<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="dark" _name="Dark" version="1.0">

	<author>Paulo Machadoi</author>
	<_description>Dark color scheme</_description>


	<!-- Global Settings -->
	<style name="text" foreground="#c7c5c3" background="#2c2d2f"/>
	<style name="selection" foreground="#111111" background="#cccc88"/>
	<style name="line-numbers" foreground="#555753" background="#2c2d2f"/>
	<style name="right-margin" foreground="#eeeeec" background="#888a85"/>

	<style name="cursor"	foreground="#d3d7cf"/>
	<style name="current-line" background="#555753"/>
	<style name="draw-spaces" foreground="#888a85"/>

	<!-- Identifiers -->
	<style name="def:identifier"	use-style="text"/>

	<!-- Statements, types, perprocessor -->
	<style name="def:statement"	foreground="#ddbb33"/>
	<style name="def:type"	use-style="def:statement"/> 
	<style name="def:preprocessor"	 use-style="def:statement"/> 

	<!-- Constants -->
	<style name="def:constant" foreground="#77a0b0"/>
	<style name="def:string" use-style="def:constant"/>
	<style name="def:special-char" use-style="def:constant"/>
	<style name="def:special-constant" use-style="def:constant"/>
	<style name="def:floating-point" use-style="def:constant"/>

	<!-- Comments -->
	<style name="def:comment" foreground="#888888" italic="true"/>
	<style name="def:shebang"	use-style="def:comment"/>
	<style name="def:doc-comment-element" use-style="def:comment"/>

	<!-- Others -->
	<style name="def:error" foreground="#fafafa" background="#aa3300"/>
	<style name="def:note" foreground="#ccaa66"/>
	<style name="search-match" foreground="#eeeeec" 	background="#4e9a06"/>

	<style name="bracket-match"	foreground="#c17d11" bold="true"/>
	<style name="bracket-mismatch" foreground="#eeeeec" background="#cc0000" bold="true"/>

	<!-- Language specific -->
	<style name="diff:added-line" foreground="#edd400"/>
	<style name="diff:removed-line"	foreground="#729fcf"/>
	<style name="diff:changed-line"	foreground="#ad7fa8"/>
	<style name="diff:diff-file" foreground="#8ae234" bold="true"/> 
	<style name="diff:location" foreground="#8ae234"/> 
	<style name="diff:special-case" foreground="#white" bold="true"/>

	<style name="latex:display-math" foreground="#5c3566"/>
	<style name="latex:command" foreground="#8ae234" bold="true"/>
	<style name="latex:include"	use-style="def:preprocessor"/>

</style-scheme>

